                            {#<a class="dropdown-item confirm-link"#}
                            {#data-patient-name="{{ patient.firstName }} {{ patient.lastName }}"#}
                            {#data-link="{{ patient.uuid }}/archive">Archive</a>#}
                            {#</div>#}
                            {#</div>#}
